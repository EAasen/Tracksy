# Example environment variables for Tracksy

# Backend configuration
PORT=3000
DATABASE_URL=postgres://user:password@localhost:5432/tracksy

# Frontend configuration
REACT_APP_API_URL=http://localhost:3000/api

# Shared configuration
JWT_SECRET=your_jwt_secret
NODE_ENV=development

# Logging configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# API credentials
GARMIN_CLIENT_ID=your_garmin_client_id
GARMIN_CLIENT_SECRET=your_garmin_client_secret
APPLE_HEALTH_CLIENT_ID=your_apple_health_client_id
APPLE_HEALTH_CLIENT_SECRET=your_apple_health_client_secret
FITBIT_CLIENT_ID=your_fitbit_client_id
FITBIT_CLIENT_SECRET=your_fitbit_client_secret

# OAuth 2.0 configuration
OAUTH2_CLIENT_ID=your_oauth2_client_id
OAUTH2_CLIENT_SECRET=your_oauth2_client_secret
OAUTH2_REDIRECT_URI=your_oauth2_redirect_uri

# Alerting settings
ALERT_EMAIL=your_alert_email
ALERT_THRESHOLD=your_alert_threshold
